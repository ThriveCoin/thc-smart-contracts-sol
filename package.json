{
  "name": "thc-smart-contracts-sol",
  "version": "1.0.0",
  "description": "ThriveCoin Smart Contracts",
  "scripts": {
    "build": "truffle build",
    "clear": "rm -r build/contracts",
    "coverage": "truffle run coverage --network=test",
    "format": "npm run format:contracts && npm run format:js",
    "format:contracts": "prettier --write **/*.sol",
    "format:js": "standard --fix",
    "lint": "npm run lint:contracts && npm run lint:js",
    "lint:contracts": "prettier --list-different **/*.sol",
    "lint:js": "standard",
    "local-node": "ganache-cli -p 7545 -e 1000 --networkId 5777",
    "migrate": "truffle migrate",
    "test": "npm run lint && npm run test:contracts",
    "test:contracts": "truffle test --network=test",
    "verify": "truffle run verify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThriveCoin/thc-smart-contracts-sol.git"
  },
  "keywords": [
    "thrivecoin",
    "thc",
    "smart contracts",
    "ethereum",
    "solidity"
  ],
  "author": {
    "name": "vigan.abd",
    "email": "vigan.abd@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ThriveCoin/thc-smart-contracts-sol/issues"
  },
  "homepage": "https://github.com/ThriveCoin/thc-smart-contracts-sol#readme",
  "devDependencies": {
    "@truffle/hdwallet-provider": "^1.5.0",
    "ethers": "^5.5.1",
    "mocha": "^9.1.2",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solidity-coverage": "^0.7.20",
    "standard": "^16.0.4",
    "truffle": "^5.4.13",
    "truffle-plugin-verify": "^0.5.15",
    "web3": "^1.6.0"
  },
  "dependencies": {
    "openzeppelin-solidity": "4.3.2"
  },
  "standard": {
    "globals": [
      "contract",
      "web3",
      "artifacts"
    ]
  }
}
